@model IEnumerable<PROG_POE.Models.Claim>
@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<!-- (Rudman, G. 2024) -->
@using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        <div class="content-box1">
            <h1 class="display-4">Welcome</h1>
            <hr class="welcome-line" />
            <br />
            <div class="container_c">
                <label>Hours Worked In The Month</label>
                <input type="number" id="hours-worked" class="form-control input_width1" name="hours" required placeholder="Hours.." />
                <br />
                <label>Additional Notes</label>
                <textarea id="additional-notes" class="form-control" name="notes" rows="4" cols="50" placeholder="Enter your notes here..."></textarea>
                <br />
                <label>Supporting Documents</label>

                <input type="file" id="supporting-docs" name="file" class="form-control input_width2" required accept=".pdf,.docx,.doc" />                
                <br />
                <br />
                <button type="submit" class="btn button_claim">Submit Claim</button>
            </div>
        </div>
    </div>
}

<br />


<style>
    .form-control {
        background-color: lightgrey;
        border-radius: 10px;
        border: 2px solid lightgrey;
    }

    .container_c {
        text-align: left;
    }

    .button_claim {
        background-color: #f3d1b6;
        border: none;
        color: black;
        padding: 10px 20px;
        border-radius: 8px;
        cursor: pointer;
        margin-top: 20px;
        transition: background-color 0.3s ease;
        display: block;
        margin: auto;
    }

        .button_claim:hover {
            background-color: #ffdab9;
        }

    .content-box1 {
        margin-left: 250px;
        border: 2px solid #ccc;
        padding: 20px;
        padding-bottom: 60px;
        border-radius: 10px;
        background-color: #ffffff;
        ;
        width: 800px;
    }

    .welcome-line {
        border: none;
        height: 2px;
        background-color: black;
        margin: 10px 0;
        width: 100%;
    }

    .display-4 {
        text-align: center;
    }

    .input_width1 {
        width: 100px;
        margin: 10px 0;
    }

    .input_width2 {
        width: 500px;
        margin: 10px 0;
    }

    table {
        width: 100%;
        text-align: left;
    }

        table th, table td {
            padding: 10px;
            text-align: center;
        }
</style>

